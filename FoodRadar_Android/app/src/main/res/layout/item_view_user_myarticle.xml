<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#0FFC2828"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.5"
    app:layout_constraintStart_toStartOf="parent">

    <ImageView
        android:id="@+id/imMyAtResImg"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:background="#FDC3C3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintCircleRadius="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_foodradar" />

    <TextView
        android:id="@+id/tvMyAtArticleTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="[主旨]"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/imMyAtResImg"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvMyAtArticleTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:text="發表時間："
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/imMyAtResImg"
        app:layout_constraintTop_toBottomOf="@+id/tvMyAtArticleTitle" />

    <TextView
        android:id="@+id/tvMyAtUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:text="發文者："
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/imMyAtResImg"
        app:layout_constraintTop_toBottomOf="@+id/tvMyAtArticleTime" />

